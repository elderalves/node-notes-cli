{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch", "section": "üêõ Bug Fixes" },
          { "type": "chore", "release": "patch", "section": "Chores" },
          { "type": "docs", "release": "patch", "section": "Documentation" },
          { "type": "style", "release": "patch", "section": "Styles" },
          { "type": "refactor", "release": "patch", "section": "Refactors" },
          {
            "type": "perf",
            "release": "patch",
            "section": "Performance Improvements"
          },
          { "type": "test", "release": "patch", "section": "Tests" },
          { "type": "build", "release": "patch", "section": "Build System" },
          {
            "type": "ci",
            "release": "patch",
            "section": "Continuous Integration"
          },
          { "type": "revert", "release": "patch", "section": "Reverts" }
        ]
      },
      "infile": "CHANGELOG.md"
    }
  }
}
