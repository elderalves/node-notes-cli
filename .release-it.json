{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "âœ¨ New Features" },
          { "type": "fix", "section": "ğŸ› Bug Fixes" },
          { "type": "chore", "section": "ğŸ”§ Chores" },
          { "type": "docs", "section": "ğŸ“š Documentation" },
          { "type": "style", "section": "ğŸ’„ Styles" },
          { "type": "refactor", "section": "â™»ï¸ Refactors" },
          { "type": "perf", "section": "âš¡ Performance Improvements" },
          { "type": "test", "section": "ğŸ§ª Tests" },
          { "type": "build", "section": "ğŸ—ï¸ Build System" },
          { "type": "ci", "section": "âš™ï¸ Continuous Integration" },
          { "type": "revert", "section": "â®ï¸ Reverts" }
        ]
      },
      "infile": "CHANGELOG.md"
    },
    "@lightness/release-it-slack-notification-plugin": {
      "slackBotTokenRef": "${SLACK_BOT_TOKEN}",
      "slackChannelRef": "test-notify",
      "slackMessageTitle": "New release"
    }
  }
}
