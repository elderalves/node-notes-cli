{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "✨ New Features" },
          { "type": "fix", "section": "🐛 Bug Fixes" },
          { "type": "chore", "section": "🔧 Chores" },
          { "type": "docs", "section": "📚 Documentation" },
          { "type": "style", "section": "💄 Styles" },
          { "type": "refactor", "section": "♻️ Refactors" },
          { "type": "perf", "section": "⚡ Performance Improvements" },
          { "type": "test", "section": "🧪 Tests" },
          { "type": "build", "section": "🏗️ Build System" },
          { "type": "ci", "section": "⚙️ Continuous Integration" },
          { "type": "revert", "section": "⏮️ Reverts" }
        ]
      },
      "infile": "CHANGELOG.md"
    },
    "@lightness/release-it-slack-notification-plugin": {
      "slackBotTokenRef": "${SLACK_BOT_TOKEN}",
      "slackChannelRef": "test-notify",
      "slackMessageTitle": "New release"
    }
  }
}
